<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >


    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="21sp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="New Text"
            android:id="@+id/dayaccount_day"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/dayaccount_listView"
            android:layout_gravity="center_horizontal"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="New Text"
            android:id="@+id/dayaccount_sum"
            android:gravity="center_vertical"
            android:textSize="21sp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:layout_gravity="center_horizontal"
            >
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="New Button"
                android:id="@+id/dayaccount_type_button"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/dayaccount_editprice" android:layout_weight="3"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="New Button"
                android:id="@+id/dayaccount_update_button"/>

    </LinearLayout>
</LinearLayout>