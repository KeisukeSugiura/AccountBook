<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="21sp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="New Text"
            android:id="@+id/dayaccount_day"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/dayaccount_listView"
            android:layout_gravity="center_horizontal"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="New Text"
            android:id="@+id/dayaccount_sum"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textSize="21sp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/day_account_input"
            android:padding="6dp"
            android:layout_gravity="center_horizontal"
            >
        <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/hatena"
                android:adjustViewBounds="true"
                android:id="@+id/dayaccount_type_button"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/dayaccount_editprice" android:layout_weight="3"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/plus100"
                android:adjustViewBounds="true"
                android:id="@+id/dayaccount_update_button"/>

    </LinearLayout>
</LinearLayout>